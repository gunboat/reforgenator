    <!-- Embeds -->
    <Script file="lib\LibStub\LibStub.lua"/>
    <Include file="lib\CallbackHandler-1.0\CallbackHandler-1.0.xml" />
    <Include file="lib\AceGUI-3.0\AceGUI-3.0.xml" />
    <Include file="lib\AceConsole-3.0\AceConsole-3.0.xml" />
